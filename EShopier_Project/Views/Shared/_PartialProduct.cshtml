@using EShopier_Project
@using EShopier.Entities
@model  Product

@foreach (Product item in Model)
{
    <div class="container">
        <div class="row">
            <div class="col-xs-4 item-photo">
                <img style="max-width:100%;" src="~/Content/images/@item.ProfileImage" />
            </div>
            <div class="col-xs-5" style="border:0px solid gray">

                <h3>@item.Name</h3>
                <h4 style="color:#337ab7">
                    MarkaID <a href="#">@item.BrandID</a>
                </h4>

                <h5 class="title-price"><small>Adet Fiyatı</small></h5>
                <h3 style="margin-top:0px;">₺@item.UnitPrice</h3>

                <div class="section" style="padding-bottom:20px;">
                    <h5 class="title-attr"><small>Adet</small></h5>
                    <div>

                        <input type="number" value="1" name="quantity" class="col-sm-3" />

                    </div>
                </div>


            </div>

        </div>
    </div>
}
