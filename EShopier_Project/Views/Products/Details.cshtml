@model EShopier.Entities.Product

@{
    ViewBag.Title = "Details";
}

<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-4 item-photo">
                <img style="max-width:100%;" src="~/Content/images/@Model.ProfileImage" />
            </div>
            <div class="col-xs-5" style="border:0px solid gray">

                <h3>@Model.Name</h3>
                <h4 style="color:#337ab7">
                </h4>
                MarkaID <a href="#">@Model.BrandID</a>

                <h5 class="title-price"><small>Adet Fiyatı</small></h5>
                <h3 style="margin-top:0px;">₺@Model.UnitPrice</h3>



                @using (Html.BeginForm("AddToCart2", "Cart"))

                {
                    @Html.HiddenFor(x => x.ID)
                    <div class="section" style="padding-bottom:20px;">
                        <h5 class="title-attr"><small>Adet</small></h5>
                        <div>

                            <input type="number" value="1" name="quantity" />

                        </div>
                    </div>
                    <div class="section" style="padding-bottom:20px;">
                        @*<button type="submit" class=" btn btn-primary"><span style="margin-right:20px" class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Sepete Ekle</button>*@
                        <button class="button" type="submit">Sepete Ekle@*<span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>Sepete Ekle*@</button>
                    </div>
                   

                }



            </div>

        </div>
    </div>


</body>


