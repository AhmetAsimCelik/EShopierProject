@Html.Partial("_PartialHeader")
<section>
    <div class="container">
        <div class="row">

            <div class="col-sm-3">
                @Html.Partial("_PartialCategory")
            </div>


            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    <h2 class="title text-center">Ürünler</h2>
                    @foreach (Product item in Model)
                    {

                        <div class="col-sm-4">

                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">
                                        <img src="~/Content/images/@item.ProfileImage" alt="" width="550" height="250" />
                                        <h2>@item.UnitPrice TL</h2>
                                        <p>@item.Name</p>
                                        <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Sepete Ekle</a>
                                    </div>
                                    <div class="product-overlay">
                                        <div class="overlay-content">
                                            <h2>@item.UnitPrice TL</h2>
                                            <p>@item.Name</p>
                                            <a href="/Cart/AddToCart/@item.ID" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Sepete Ekle</a>
                                            


                                        </div>
                                    </div>
                                </div>
                                <div class="choose">
                                    <ul class="nav nav-pills nav-justified">
                                        <li><a href="/Products/Details/@item.ID"><i class="fa fa fa-search-plus"></i>Ürünü İncele</a></li>
                                        <li><a href="#"><i class="fa fa fa-info-circle"></i>@item.ID</a></li>


                                    </ul>
                                </div>

                            </div>

                        </div>
                    }



                </div>


            </div>




        </div>

        <nav aria-label="Page navigation example">
            <ul class="pagination pull-right">
                @Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
            </ul>
        </nav>


    </div>
    <div class="col-sm-3">
        @Html.Partial("_PartialFooter")
    </div>

</section>


