@model EShopier.Entities.ViewModels.RegisterUser
@{
    ViewBag.Title = "Register";
}

<section id="form">
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2 class="text-center">KAYIT OL</h2>
                    @using (Html.BeginForm())
                    {
                        @Html.TextBoxFor(model => model.Name, new { @placeholder = "Adınız" })
                        @Html.TextBoxFor(model => model.LastName, new { @placeholder = "Soyadınız" })
                        @Html.TextBoxFor(model => model.UserName, new { @placeholder = "Kullanıcı Adınız" })
                        @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email" })
                        @Html.TextBoxFor(model => model.Password, new { @placeholder = "Şifreniz" })
                        @Html.TextBoxFor(model => model.PasswordAgain, new { @placeholder = "Tekrar Şifreniz" })




                        <button type="submit" class="btn btn-default">Kayıt Ol</button>
                    }

                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->
