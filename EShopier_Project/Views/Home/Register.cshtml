@model EShopier.Entities.ViewModels.RegisterUser

@{
    ViewBag.Title = "Register";
}


    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4">
                <div class="signup-form">

                    <h2 class="text-center">KAYIT OL</h2>

                    @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))

                    {
                        @Html.ValidationSummary(false)
                        @Html.TextBoxFor(model => model.Name, new { @placeholder = "Adınız" })                        
                        @Html.TextBoxFor(model => model.LastName, new { @placeholder = "Soyadınız" })
                        @Html.TextBoxFor(model => model.UserName, new { @placeholder = "Kullanıcı Adınız" })
                        @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email" })
                        @Html.TextBoxFor(model => model.Password, new { @placeholder = "Şifreniz", type = "password" })
                        @Html.TextBoxFor(model => model.PasswordAgain, new { @placeholder = "Tekrar Şifreniz", type = "password" })
                        @Html.TextBoxFor(model => model.ProfileImage, new { @class = "form-group", type = "file" })



                        <button type="submit" class="btn btn-default" id="btn">Kayıt Ol</button>



                    }

                </div>
                
                <script>
                    $('#btn').click(function () {
                        alert('Hesabınız Oluşturuldu Giriş Yapabilirsiniz.');
                    });
                </script>
            </div>
           
        </div>
    </div>
    

