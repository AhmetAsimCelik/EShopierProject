
@{
    ViewBag.Title = "Shop";
}


<section>
    <div class="container">
        <div class="row">
           
            <div class="col-sm-9 padding-right">
                <div class="product-details">
                    <!--product-details-->
                    <div class="col-sm-5">
                        <div class="view-product">
                            <img src="~/Content/images/product-details/1.jpg" alt="" />
                            <h3>ZOOM</h3>
                        </div>
                       
                    </div>
                    <div class="col-sm-7">
                        <div class="product-information">
